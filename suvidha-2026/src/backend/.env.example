# Environment Configuration

# Server
PORT=5000
NODE_ENV=development

# PostgreSQL Database
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/suvidha
POSTGRES_SSL=false
POSTGRES_SSL_REJECT_UNAUTHORIZED=false
POSTGRES_POOL_MAX=10
POSTGRES_IDLE_TIMEOUT_MS=30000
POSTGRES_CONNECTION_TIMEOUT_MS=2000

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=1d

# Data Encryption
DATA_ENCRYPTION_KEY=your_32_character_encryption_key_here_change_in_prod

# Twilio SMS (Optional - for OTP functionality)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
